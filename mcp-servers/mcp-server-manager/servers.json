{
  "servers": [
    {
      "id": "journal-db",
      "name": "Journal DB",
      "port": 3333,
      "directory": "db-mcp-server",
      "type": "python",
      "command": "uv run python server.py --http",
      "venv": false,
      "env": {
        "QUERY_MODE": "structured"
      },
      "modes": {
        "prod": {
          "label": "Prod (Azure)",
          "env": { "APP_ENV": "production", "DB_NAME": "varun_journal" }
        },
        "dev": {
          "label": "Dev (Local)",
          "env": { "APP_ENV": "development" }
        }
      },
      "default_mode": "prod",
      "description": "Personal journal database"
    },
    {
      "id": "garmin",
      "name": "Garmin",
      "port": 5555,
      "directory": "garmin-mcp-server",
      "type": "python",
      "command": "uv run python -m garmin_mcp --http --port 5555",
      "venv": false,
      "env": {},
      "_env_note": "GARMIN_EMAIL and GARMIN_PASSWORD come from garmin-mcp-server/.env (gitignored)",
      "description": "Garmin fitness data - activities, heart rate, sleep"
    },
    {
      "id": "google-places",
      "name": "Google Places",
      "port": 1111,
      "directory": "googleplaces-mcp-server",
      "type": "node",
      "command": "npm run dev -- --http --port 1111",
      "venv": false,
      "env": {},
      "_env_note": "GOOGLE_PLACES_API_KEY comes from googleplaces-mcp-server/.env (gitignored)",
      "description": "Google Places API - location search, details"
    },
    {
      "id": "google-workspace",
      "name": "Google Workspace",
      "port": 3000,
      "directory": "google-workspace-mcp-server",
      "type": "python",
      "command": "uv run python src/server.py --http --port 3000",
      "venv": false,
      "env": {
        "PORT": "3000"
      },
      "description": "Calendar, Tasks, Gmail, Sheets - unified Google APIs"
    },
    {
      "id": "splitwise",
      "name": "Splitwise",
      "port": 4000,
      "directory": "splitwise-mcp-server",
      "type": "node",
      "command": "node dist/index.js --http --port 4000",
      "venv": false,
      "env": {},
      "description": "Splitwise - expense tracking and splitting"
    }
  ],
  "groups": [
    {
      "name": "Personal Assistant",
      "servers": ["google-workspace", "journal-db", "garmin", "google-places"]
    }
  ]
}
